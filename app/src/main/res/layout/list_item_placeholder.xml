<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/root"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginStart="8dp"
                                   android:layout_marginTop="4dp"
                                   android:layout_marginEnd="8dp"
                                   android:layout_marginBottom="4dp"
                                   android:background="?attr/selectableItemBackgroundBorderless"
                                   app:cardCornerRadius="4dp"
                                   app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:id="@+id/icon"
                android:layout_width="@dimen/activity_icon_size"
                android:layout_height="@dimen/activity_icon_size"
                android:layout_margin="16dp"
                android:background="@drawable/provider_icon_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:id="@+id/details"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_marginBottom="4dp"
                android:background="@color/grey"
                app:layout_constraintBottom_toTopOf="@id/details2"
                app:layout_constraintEnd_toStartOf="@id/top_guideline"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

        <View
                android:id="@+id/details2"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_marginBottom="4dp"
                android:background="@color/grey"
                app:layout_constraintBottom_toTopOf="@id/timestamp"
                app:layout_constraintEnd_toStartOf="@id/middle_guideline"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/details"
                app:layout_constraintTop_toBottomOf="@id/details" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.40" />

        <View
                android:id="@+id/timestamp"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:background="@color/grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/bottom_guideline"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/details"
                app:layout_constraintTop_toBottomOf="@id/details2" />


        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.64" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

