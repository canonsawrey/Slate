<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">

    <LinearLayout
            android:layout_margin="2dp"
            android:background="@drawable/plan_tile_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/number"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/plan_tile_white_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plan_tile_red_background"
                android:ems="10"
                android:id="@+id/breakfast"
                android:text="@string/b"
                android:layout_gravity="center"
                android:gravity="center" android:layout_margin="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/plan_tile_green_background"
                android:id="@+id/lunch"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/l"
                android:layout_margin="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/plan_tile_green_background"
                android:text="@string/d"
                android:id="@+id/dinner"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>