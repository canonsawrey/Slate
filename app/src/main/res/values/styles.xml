<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AcceptButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/accept_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="NeutralButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/neutral_button_background</item>
    </style>
    <style name="AccentButton">
        <item name="android:background">@drawable/accent_button_background</item>
    </style>

</resources>
